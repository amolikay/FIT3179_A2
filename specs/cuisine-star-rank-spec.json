{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "3. Cuisine Popularity: Top 10 Starred Cuisine Types",
  "width": 450,
  "height": 350,
  "data": {
    "url": "michelin.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.Award != 'Selected Restaurants'"},
    {
      "calculate": "test(datum.Award, /3/) ? 3 : test(datum.Award, /2/) ? 2 : test(datum.Award, /1/) ? 1 : 0",
      "as": "Stars"
    },
    {"aggregate": [{"op": "sum", "field": "Stars", "as": "TotalStars"}], "groupby": ["Cuisine"]},
    {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "TotalStars", "order": "descending"}]},
    {"filter": "datum.rank <= 10"}
  ],
  "mark": {"type": "bar", "stroke": "#2d3748", "strokeWidth": 1},
  "encoding": {
    "y": {
      "field": "Cuisine",
      "type": "nominal",
      "sort": "-x",
      "title": null
    },
    "x": {
      "field": "TotalStars",
      "type": "quantitative",
      "title": "Total Michelin Stars"
    },
    "color": {
      "field": "TotalStars",
      "type": "quantitative",
      "scale": {"scheme": "oranges"},
      "legend": null
    },
    "tooltip": [
      {"field": "Cuisine", "title": "Cuisine Type"},
      {"field": "TotalStars", "title": "Total Stars"}
    ]
  }
}