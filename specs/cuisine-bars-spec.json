{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 480,
  "description": "Horizontal bar chart showing distribution of Michelin stars by cuisine type (top 10). Greyscale colour encoding represents star count intensity. Demonstrates preference for modern/contemporary cuisines and European traditions.",
  "title": {
    "text": "Michelin Stars by Cuisine Type (Top 10)",
    "subtitle": [
      "Cuisines ranked by total star count; colour intensity shows relative recognition"
    ],
    "fontSize": 18,
    "fontWeight": "bold",
    "subtitleFontSize": 12,
    "subtitleFontStyle": "italic"
  },
  "data": {
    "url": "../data/michelin_by_cuisine.json"
  },
  "mark": {
    "type": "bar",
    "stroke": "white",
    "strokeWidth": 1,
    "cornerRadius": 2
  },
  "encoding": {
    "y": {
      "field": "cuisine",
      "type": "nominal",
      "sort": "-x",
      "title": null,
      "axis": {
        "labelFontSize": 12,
        "labelPadding": 15,
        "orient": "left"
      }
    },
    "x": {
      "field": "stars",
      "type": "quantitative",
      "title": "Total Michelin Stars",
      "axis": {
        "labelFontSize": 11,
        "grid": true,
        "gridOpacity": 0.2,
        "gridColor": "#e2e8f0",
        "labelAngle": 0,
        "labelExpr": "datum.value"
      }
    },
    "color": {
      "field": "stars",
      "type": "quantitative",
      "scale": {
        "scheme": "greys",
        "domain": [0, 850]
      },
      "legend": {
        "title": "Star Count Intensity",
        "orient": "top",
        "labelFontSize": 11,
        "titleFontSize": 12,
        "titlePadding": 8,
        "gradientLength": 300
      }
    },
    "tooltip": [
      {
        "field": "cuisine",
        "type": "nominal",
        "title": "Cuisine Type"
      },
      {
        "field": "stars",
        "type": "quantitative",
        "title": "Total Michelin Stars"
      },
      {
        "field": "restaurants",
        "type": "quantitative",
        "title": "Number of Restaurants"
      },
      {
        "field": "percentage",
        "type": "quantitative",
        "title": "Percentage of Total (%)",
        "format": ".1f"
      },
      {
        "field": "primary_countries",
        "type": "nominal",
        "title": "Primary Countries"
      }
    ]
  }
}