{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "1. Interactive Global Star Distribution by Income Group",
  "width": "container",
  "height": 450,
  "config": {"font": "Inter"},
  
  "params": [
    {"name": "zoom_pan", "select": {"type": "interval", "translate": "[mousedown, mouseup]", "zoom": "wheel"}, "bind": "scales"}
  ],
  "projection": {"type": "equalEarth"},
  
  "data": {
    "url": "michelin.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "isValid(datum.Latitude) && isValid(datum.Longitude)"}, 
    {"calculate": "trim(split(datum.Location, ', ')[1])", "as": "Country"},
    {
      "lookup": "Country",
      "from": {
        "data": {"url": "economic_classification.csv", "format": {"type": "csv"}},
        "key": "Economy",
        "fields": ["Income group"]
      }
    }
  ],
  
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/main/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {"type": "geoshape", "fill": "#374151", "stroke": "white"} 
    },
    {
      "mark": {"type": "circle", "opacity": 0.8, "stroke": "black", "strokeWidth": 0.5},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Award",
          "type": "nominal",
          "title": "Star Rating",
          "scale": {"range": [10, 80, 150]}
        },
        "color": {
          "field": "Income group",
          "type": "nominal",
          "title": "Income Group",
          "scale": {
            "domain": ["High income", "Upper middle income", "Lower middle income", "Low income"],
            "range": ["#f59e0b", "#fcd34d", "#f97316", "#ef4444"]
          },
          "legend": {"orient": "bottom"}
        },
        "tooltip": [
          {"field": "Name", "type": "nominal", "title": "Restaurant"},
          {"field": "Location", "type": "nominal", "title": "City, Country"},
          {"field": "Award", "type": "nominal", "title": "Award"},
          {"field": "Income group", "type": "nominal", "title": "Income Group"}
        ]
      }
    }
  ]
}