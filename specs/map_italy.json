{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 450,
  "height": 450,
  "title": {
    "fontSize": 16,
    "anchor": "middle",
    "text": "Michelin-Starred Restaurants in Italy"
  },
  "projection": {
    "type": "equalEarth",
    "center": [12.5, 42], 
    "scale": 1500
  },
  "layer": [
    {
      "data": {
        "url": "https://vega.github.io/vega-datasets/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#efefef",
        "stroke": "#ffffff"
      },
      "transform": [
        {"filter": "datum.properties.name == 'Italy'"} 
      ]
    },
    {
      "data": {"url": "michelin.csv"},
      "transform": [
        {"calculate": "trim(split(datum.Location, ', ')[1])", "as": "Country"},
        {"filter": "datum.Country == 'Italy'"}
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Award",
          "type": "nominal",
          "legend": {"title": "Michelin Stars"},
          "scale": {
            "domain": ["1 Star", "2 Stars", "3 Stars"],
            "range": [40, 90, 160]
          }
        },
        "color": {
          "field": "Award",
          "type": "nominal",
          "legend": {"title": "Award"},
          "scale": {
            "domain": ["1 Star", "2 Stars", "3 Stars"],
            "range": ["#fcd34d", "#f59e0b", "#ef4444"]
          }
        },
        "tooltip": [
          {"field": "Name", "type": "nominal", "title": "Restaurant"},
          {"field": "Location", "type": "nominal"},
          {"field": "Cuisine", "type": "nominal"},
          {"field": "Award", "type": "nominal"}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "background": null
  }
}