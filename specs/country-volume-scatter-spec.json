{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 10 Cuisine Popularity by Total Michelin Stars",
    "subtitle": "Total stars awarded across all 1, 2, and 3-star restaurants"
  },
  "width": 450,
  "height": 350,
  "data": {
    "url": "michelin.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": "datum.Award != 'Selected Restaurants'"
    },
    {
      "calculate": "test(datum.Award, /3/) ? 3 : test(datum.Award, /2/) ? 2 : test(datum.Award, /1/) ? 1 : 0",
      "as": "Stars"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Stars",
          "as": "TotalStars"
        }
      ],
      "groupby": [
        "Cuisine"
      ]
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [
        {
          "field": "TotalStars",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.rank <= 10"
    }
  ],
  "mark": {
    "type": "bar",
    "stroke": "white",
    "strokeWidth": 1,
    "color": "#f59e0b"
  },
  "encoding": {
    "y": {
      "field": "Cuisine",
      "type": "nominal",
      "sort": "-x",
      "title": null
    },
    "x": {
      "field": "TotalStars",
      "type": "quantitative",
      "title": "Total Michelin Stars"
    },
    "tooltip": [
      {
        "field": "Cuisine",
        "title": "Cuisine Type"
      },
      {
        "field": "TotalStars",
        "title": "Total Stars"
      }
    ]
  },
  "config": {
    "axis": {
      "grid": false
    },
    "view": {
      "stroke": null
    }
  }
}